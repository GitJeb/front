
    <div class="container">
        <div class="row">

            {{#each uploads as | upload |}}
                <div class="col-md-4">
                    <div class="thumbnail">
                        <!-- pic display -->
                        <div class="pic-display">
                              <img src= {{upload.url}} alt='' id="picz">
                        </div>
                        <!-- trigger isUser Helper to check if owner is current user -->
                        {{#isUser upload}}
                        <!-- pic delete button -->
                        <div class="pic-del-button">
                              <button data-id="{{upload.id}}" class="delete-upload">Delete</button>
                        </div>

                        <!-- pic update button -->
                        <div class="-pic-upload-button">
                            <button class="update-form-button">Update this upload</button>

                      <form data-id="{{upload.id}}" class="update-form hidden">
                        <fieldset>
                          <label>
                            New Title
                            <input type="text" name="image[title]">
                        </label>
                          <input class="update-upload" type="submit">Update</input>
                        </fieldset>
                      </form>

                        </div>
                        {{/isUser}}

                        <!-- pic title -->
                        <div class="pic-title">
                              <h4> {{upload.title}}</h4> by: {{upload._owner.email}}
                        </div>

                        <!-- pic upload date -->
                        <div class="pic-date">
                              <!-- trigger custom helper to formate date -->
                              <h4>created: {{#formatDate upload.updatedAt}}{{/formatDate}} </h4>

                        </div>
                    </div>
                </div>
            {{/each}}


        </div>
      </div>
